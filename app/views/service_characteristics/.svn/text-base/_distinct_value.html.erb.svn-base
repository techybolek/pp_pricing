<table style="width:600px;" class="table table-striped table-hover">
  <tr>
    <th>Value</th>
    <th>Measure Unit</th>
    <th>Default?</th>
  </tr>
  
  <% @characteristic.characteristic_values.each do |value| %>
    <tr>
      <td><%= value.d_value %></td>
      <td><%= select_tag "service_characteristic[characteristic_value][measure_unit_code]", options_from_collection_for_select(MeasureUnit.all, :measure_unit_code, :name, value.measure_unit_code),
                   {class: "span3 no-left-margin", include_blank: true, data: {:role => "select2"}} %></td>
      <td>
        <% if value.characteristic_value_id == @characteristic.default_characteristic_value.characteristic_value_id %>
          <i class="icon-check" title="This is the default distinct value"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
