<div class="container header no-bottom-margin">
  <div class="container">
    <div class="span"><%= link_to image_tag("logo.png"), root_path %></div>
    <div class="tagline">Product Portfolio</div>
    <%if logged_in? %>
      <div class="pull-right username" title="Your current username"><%=session[:user].user_name%></div>
    <%end%>
  </div>
  <div class="navbar no-bottom-margin">
    <div class="navbar-inner">
      <%if logged_in? %>
        <ul class="nav">
          <li class="dropdown">
            <%= render "layouts/product_menu" %>
          </li>
          <li class="dropdown">
            <%= render "layouts/pricing_menu" %>
          </li>
          <li class="dropdown">
            <%= render "layouts/sensitivities_menu" %>
          </li>
        </ul>
        <ul class="nav pull-right">
          <li><a href="<%=logout_sessions_path%>"><i class="icon-signout"></i> Sign Out</a></li>
        </ul>
      <% end %>
      <ul class="nav pull-right">
        <li><a href="<%=APP_CONFIG["welcome_url"]%>"><i class="icon-home"></i> Home</a></li>
      </ul>
    </div>
  </div>
</div>
